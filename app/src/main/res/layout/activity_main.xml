<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/layer1"
    android:layoutDirection="rtl"

    tools:context=".MainActivity"
    android:orientation="vertical">
        //layout of my phone
        <!--    <include-->
        <!--        layout="@layout/app_bar_layout"/>-->
        <RelativeLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent">
                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/fab_add_setting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:fabSize="mini"

                    android:layout_gravity="right"

                    android:backgroundTint="@color/purple_dark"
                    android:src="@drawable/ic_settings_black_24dp" />

                <androidx.cardview.widget.CardView
                    android:layout_height="210dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="5dp"
                    app:cardCornerRadius="20dp"
                    android:elevation="5dp"
                    android:layout_width="match_parent"
                    >

                        <com.smarteist.autoimageslider.SliderLayout
                            android:layout_width="match_parent"
                            android:layout_height="210dp"
                            android:elevation="5dp"
                            android:layout_alignParentTop="true"
                            android:id="@+id/imageSlider_2"/>

                </androidx.cardview.widget.CardView>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="5dp"
            android:orientation="vertical"
            >

                <LinearLayout
                    android:id="@+id/first_linear"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"

                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginLeft="25dp"
                    android:layout_weight="1"
                    android:background="@drawable/back_white"
                    android:elevation="8dp"
                    android:orientation="horizontal">
                        <androidx.cardview.widget.CardView
                            android:layout_height="match_parent"
                            android:layout_marginTop="20dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginBottom="20dp"
                            app:cardCornerRadius="20dp"
                            android:elevation="5dp"
                            android:layout_weight="3"
                            android:layout_width="0dp"
                            >
                                <LinearLayout
                                    android:layout_height="match_parent"
                                    android:layout_width="match_parent"
                                    android:background="@drawable/thered"/>
                        </androidx.cardview.widget.CardView>



                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="10dp"
                            android:layout_weight="0.07"
                            android:layout_marginBottom="10dp"
                            android:layout_marginRight="5dp"
                            android:background="@color/purple_dark" />
                        <LinearLayout
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="3"

                            android:layout_width="0dp">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"

                                    android:gravity="center"
                                    android:layout_weight="1"
                                    android:layout_gravity="top"
                                    android:text="استلام جديد PO"
                                    android:layout_marginLeft="20dp"
                                    android:layout_marginTop="10dp"
                                    android:textColor="@color/purple_dark"
                                    android:textSize="14sp"
                                    android:textStyle="bold" />
                                <LinearLayout
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"

                                    android:layout_marginTop="15dp"

                                    android:layout_width="wrap_content">
                                        <com.google.android.material.floatingactionbutton.FloatingActionButton
                                            android:id="@+id/fab_add_po"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="right"
                                            app:fabSize="mini"
                                            app:srcCompat="@drawable/ic_add_black_24dp"
                                            tools:ignore="VectorDrawableCompat" />

                                        <com.google.android.material.floatingactionbutton.FloatingActionButton
                                            android:id="@+id/fab_print_po"
                                            android:layout_marginRight="30dp"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"

                                            android:layout_gravity=""
                                            app:fabSize="mini"


                                            app:srcCompat="@drawable/ic_print_black_24dp"
                                            tools:ignore="VectorDrawableCompat" />

                                </LinearLayout>

                        </LinearLayout>
                        <!--            <TextView-->
                        <!--                android:layout_width="match_parent"-->
                        <!--                android:layout_height="wrap_content"-->

                        <!--                android:gravity="center"-->
                        <!--                android:text="PO"-->

                        <!--                android:textColor="@color/purple_dark"-->
                        <!--                android:textSize="12sp"-->
                        <!--                android:textStyle="bold" />-->

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/second_linear"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"

                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginLeft="25dp"
                    android:layout_weight="1"
                    android:background="@drawable/back_white"
                    android:elevation="8dp"
                    android:orientation="horizontal"
                    >

                        <androidx.cardview.widget.CardView
                            android:layout_height="match_parent"
                            android:layout_marginTop="20dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginBottom="20dp"
                            app:cardCornerRadius="20dp"
                            android:elevation="5dp"
                            android:layout_weight="3"
                            android:layout_width="0dp"
                            >
                                <LinearLayout
                                    android:layout_height="match_parent"
                                    android:layout_width="match_parent"
                                    android:background="@drawable/four"
                                    />
                        </androidx.cardview.widget.CardView>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="10dp"
                            android:layout_weight="0.07"
                            android:layout_marginBottom="10dp"
                            android:layout_marginRight="5dp"
                            android:background="@color/purple_dark" />
                        <LinearLayout
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="3"

                            android:layout_width="0dp"
                            >
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"

                                    android:gravity="center"
                                    android:layout_weight="1"
                                    android:layout_gravity="top"
                                    android:text="استلام مباشر DSD "
                                    android:layout_marginLeft="20dp"
                                    android:layout_marginTop="10dp"
                                    android:textColor="@color/purple_dark"
                                    android:textSize="14sp"
                                    android:textStyle="bold" />
                                <LinearLayout
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"

                                    android:layout_marginTop="15dp"

                                    android:layout_width="wrap_content">
                                        <com.google.android.material.floatingactionbutton.FloatingActionButton
                                            android:id="@+id/fab_add_DSD"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="right"
                                            app:fabSize="mini"
                                            app:srcCompat="@drawable/ic_add_black_24dp"
                                            tools:ignore="VectorDrawableCompat" />

                                        <com.google.android.material.floatingactionbutton.FloatingActionButton
                                            android:id="@+id/fab_print_DSD"
                                            android:layout_marginRight="30dp"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"

                                            android:layout_gravity=""
                                            app:fabSize="mini"


                                            app:srcCompat="@drawable/ic_print_black_24dp"
                                            tools:ignore="VectorDrawableCompat" />

                                </LinearLayout>

                        </LinearLayout>



                </LinearLayout>
        </LinearLayout>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            app:srcCompat="@drawable/ic_add_black_24dp"
            tools:ignore="VectorDrawableCompat" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"

            app:srcCompat="@drawable/ic_delete_forever_black_24dp"
            tools:ignore="VectorDrawableCompat" />

</LinearLayout>
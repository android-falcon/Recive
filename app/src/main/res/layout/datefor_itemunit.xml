<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="200dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:padding="4dp"

        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/ip_address_"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignParentTop="true"


            android:gravity="top"
            android:lineHeight="29sp"
            android:text="@string/getitemunit"
            android:textColor="@color/purple_dark"
            android:textSize="24sp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:padding="4dp"

        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:layout_weight="1"
            android:gravity="start|center_vertical"
            android:padding="4dp"
            android:text="@string/fromdate"
            android:textColor="@color/purple_dark"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/fromdate"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:inputType="date"
            android:textColor="@color/black"
            android:textSize="12sp"
            />




    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:padding="4dp"

        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:layout_weight="1"
            android:gravity="start|center_vertical"
            android:padding="4dp"
            android:text="@string/todate"
            android:textColor="@color/purple_dark"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/todate"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:inputType="date"
            android:textColor="@color/black"
            android:textSize="12sp"
           />




    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:padding="4dp"

        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/done"
            android:layout_width="120dp"
            android:layout_height="40dp"

            android:background="@drawable/dark_gradiant_smallborder"

            android:imeOptions="actionDone"
            android:text="@string/app_done"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="@color/white"
            />



    </LinearLayout>
</LinearLayout>
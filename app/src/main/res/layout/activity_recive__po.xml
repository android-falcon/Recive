<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layoutDirection="rtl">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/layer1"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linearmain"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center"
            android:elevation="2dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_margin="5dp"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/edittext_white_border"
                    android:elevation="2dp"
                    android:gravity="center"
                    android:inputType="number"
                    android:padding="3dp"
                    android:text="GRN"
                    android:textColor="@color/purple_dark"
                    android:textSize="14sp" />


                <TextView
                    android:id="@+id/GrnTextView"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_marginRight="5dp"
                    android:layout_height="25dp"
                    android:background="@drawable/edittext_white_border"

                    android:elevation="2dp"

                    android:padding="3dp"
                    android:gravity="center"
                    android:maxLines="1"
                    android:inputType="text"
                    android:textColor="@color/darkblue_"
                    android:textSize="14sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_margin="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/edittext_white_border"
                    android:elevation="2dp"
                    android:gravity="center"
                    android:inputType="number"
                    android:padding="3dp"
                    android:text="رقم الطلبية"
                    android:textColor="@color/purple_dark"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/transaction_no"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_marginRight="5dp"
                    android:layout_height="25dp"
                    android:background="@drawable/edittext_back"

                    android:elevation="2dp"

                    android:padding="3dp"
                    android:gravity="center"
                    android:maxLines="1"
                    android:inputType="text"
                    android:textColor="@color/darkblue_"
                    android:textSize="14sp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_margin="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/edittext_white_border"
                    android:elevation="2dp"
                    android:gravity="center"
                    android:padding="3dp"
                    android:text="اسم المورد"
                    android:textColor="@color/purple_dark"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/supplier_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_weight="2"
                    android:background="@drawable/edittext_white_border"
                    android:elevation="2dp"
                    android:gravity="center"
                    android:padding="3dp"
                    android:textColor="@color/darkblue_"
                    android:textSize="14sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_margin="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/edittext_white_border"
                    android:elevation="2dp"
                    android:gravity="center"
                    android:padding="3dp"
                    android:text="رقم المادة"
                    android:textColor="@color/purple_dark"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/item_no"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="25dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/edittext_back"
                    android:elevation="2dp"
                    android:maxLines="1"
                    android:inputType="text"
                    android:padding="3dp"
                    android:gravity="center"
                    android:textColor="@color/darkblue_"
                    android:textSize="14sp" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_margin="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/edittext_white_border"
                    android:elevation="2dp"
                    android:gravity="center"
                    android:padding="3dp"
                    android:text="اسم المادة"
                    android:textColor="@color/purple_dark"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/item_name"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/edittext_white_border"
                    android:elevation="2dp"
                    android:padding="3dp"
                    android:inputType="number"
                    android:gravity="center"
                    android:textColor="@color/darkblue_"
                    android:textSize="14sp"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_margin="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/edittext_white_border"
                    android:elevation="2dp"
                    android:gravity="center"
                    android:padding="3dp"
                    android:text="الكمية المطلوبة"
                    android:textColor="@color/purple_dark"
                    android:textSize="14sp" />
                <TextView
                    android:id="@+id/qty_required"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/edittext_white_border"
                    android:elevation="2dp"
                    android:padding="3dp"
                    android:inputType="number"
                    android:gravity="center"
                    android:textColor="@color/darkblue_"
                    android:textSize="14sp"
                    />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_margin="5dp"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/edittext_white_border"
                    android:elevation="2dp"
                    android:gravity="center"
                    android:padding="3dp"
                    android:text="المجاني"
                    android:textColor="@color/purple_dark"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/free_qty"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/edittext_white_border"
                    android:elevation="2dp"
                    android:padding="3dp"
                    android:inputType="number"
                    android:gravity="center"
                    android:textColor="@color/darkblue_"
                    android:textSize="14sp"
                    />


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_margin="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/edittext_white_border"
                    android:elevation="2dp"
                    android:gravity="center"
                    android:padding="3dp"
                    android:text="عدد الاصناف "
                    android:textColor="@color/purple_dark"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/total_category_qty"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/edittext_white_border"
                    android:elevation="2dp"
                    android:padding="3dp"
                    android:inputType="number"
                    android:gravity="center"
                    android:textColor="@color/darkblue_"
                    android:textSize="14sp"
                    />


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_margin="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/edittext_white_border"
                    android:elevation="2dp"
                    android:gravity="center"
                    android:padding="3dp"
                    android:text="تاريخ الانتهاء "
                    android:textColor="@color/purple_dark"
                    android:textSize="14sp" />
                <LinearLayout
                    android:id="@+id/linearDate"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/edittext_white_border"
                    android:layout_weight="2">

                    <TextView
                        android:id="@+id/date_expire"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:layout_weight="2"
                        android:elevation="2dp"
                        android:gravity="center"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:padding="3dp"
                        android:textColor="@color/darkblue_"
                        android:textSize="14sp" />

                    <ImageView
                        android:id="@+id/calenderdialog_image"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:src="@drawable/ic_date_range_black_24dp" />
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_margin="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/edittext_white_border"
                    android:elevation="2dp"
                    android:gravity="center"
                    android:padding="3dp"
                    android:text="الكمية المستلمة "
                    android:textColor="@color/purple_dark"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/recived_qty"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="25dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/edittext_back"
                    android:elevation="2dp"
                    android:maxLines="1"
                    android:inputType="text"
                    android:padding="3dp"
                    android:gravity="center"
                    android:textColor="@color/darkblue_"
                    android:textSize="14sp" />


            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_margin="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:background="@drawable/edittext_white_border"
                    android:elevation="2dp"
                    android:gravity="center"
                    android:padding="3dp"
                    android:text="عدد الاصناف المستلمة"
                    android:textColor="@color/purple_dark"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/reciver_category_qty"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"

                    android:inputType="numberDecimal"

                    android:layout_marginRight="10dp"
                    android:background="@drawable/edittext_white_border"
                    android:elevation="2dp"
                    android:padding="3dp"

                    android:gravity="center"
                    android:textColor="@color/darkblue_"
                    android:textSize="14sp" />


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_margin="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:background="@drawable/edittext_white_border"
                    android:elevation="2dp"
                    android:gravity="center"
                    android:padding="3dp"
                    android:text="رقم فاتورة المورد"
                    android:textColor="@color/purple_dark"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/voucher_no"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="25dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/edittext_back"
                    android:elevation="2dp"
                    android:padding="3dp"
                    android:inputType="number"
                    android:gravity="center"
                    android:textColor="@color/darkblue_"
                    android:textSize="14sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center">

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/add_qty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/fab_margin"
                    android:background="@drawable/dark_gradiant_smallborder"
                    app:fabSize="mini"
                    app:srcCompat="@drawable/ic_add_black_24dp"
                    tools:ignore="VectorDrawableCompat" />

<!--                <com.google.android.material.floatingactionbutton.FloatingActionButton-->
<!--                    android:id="@+id/delet_qty"-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:layout_gravity="center"-->
<!--                    android:layout_margin="@dimen/fab_margin"-->
<!--                    android:background="@drawable/dark_gradiant_smallborder"-->
<!--                    app:fabSize="mini"-->
<!--                    app:srcCompat="@drawable/ic_delete_forever_black_24dp"-->
<!--                    tools:ignore="VectorDrawableCompat" />-->

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/total_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:elevation="2dp"
            android:orientation="vertical"
            android:padding="3dp">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_white_border"
                android:padding="3dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:text="اسم"
                    android:textColor="@color/purple_dark"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="2"
                    android:gravity="right"
                    android:text="المادة"
                    android:textColor="@color/purple_dark"
                    android:textSize="15sp" />

                <TextView

                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.03"

                    android:background="@color/purple_dark"
                    android:gravity="center"
                    android:textColor="@color/purple_dark" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="الكمية  "
                    android:textColor="@color/purple_dark"
                    android:textSize="15sp" />

                <TextView

                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.03"

                    android:background="@color/purple_dark"

                    android:gravity="center" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="المجاني  "
                    android:textColor="@color/purple_dark"
                    android:textSize="15sp" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="الاجمالي  "
                    android:textColor="@color/purple_dark"
                    android:textSize="15sp" />
            </TableRow>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp">

                <androidx.core.widget.NestedScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fillViewport="true">

                    <TableLayout
                        android:id="@+id/tableData"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edittext_white_border"

                        >

                    </TableLayout>
                </androidx.core.widget.NestedScrollView>







            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_margin="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_white_border"
                android:elevation="2dp"
                android:gravity="center"
                android:padding="3dp"
                android:text="الاجمالي "
                android:textColor="@color/purple_dark"
                android:textSize="14sp" />


            <TextView
                android:id="@+id/total"
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:background="@drawable/edittext_white_border"
                android:elevation="2dp"
                android:padding="3dp"
                android:inputType="number"
                android:gravity="center"
                android:textColor="@color/darkblue_"
                android:textSize="14sp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center">


            <Button
                android:id="@+id/save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"

                android:background="@drawable/dark_gradiant_smallborder"
                android:elevation="5dp"
                android:gravity="center"
                android:padding="3dp"
                android:text="حفظ الاستلام"
                android:textColor="@color/white_dark"
                android:textSize="14sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/cancel_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="2dp"
                android:layout_marginRight="95dp"
                android:layout_marginBottom="2dp"
                android:background="@drawable/dark_gradiant_smallborder"
                android:elevation="5dp"
                android:gravity="center"
                android:padding="3dp"
                android:text="اغلاق"
                android:textColor="@color/white_dark"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>


    </LinearLayout>


</ScrollView>





</RelativeLayout>
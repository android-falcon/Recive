<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/layer1"
    android:layoutDirection="rtl"

    tools:context=".MainActivity"
    android:orientation="vertical">
    <!--    // mdpi layout-->
    <!--    <include-->
    <!--        layout="@layout/app_bar_layout"/>-->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="15dp"
        android:layout_weight="3"
        android:elevation="5dp"
        app:cardCornerRadius="20dp">

        <com.smarteist.autoimageslider.SliderLayout
            android:id="@+id/imageSlider_2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:elevation="5dp" />

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"


        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"

        android:layout_weight="2"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/first_linear"
            android:layout_width="match_parent"
            android:layout_height="0dp"

            android:layout_marginLeft="25dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="25dp"
            android:layout_marginBottom="8dp"
            android:layout_weight="1"
            android:background="@drawable/back_white"
            android:elevation="8dp"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="20dp"
                android:layout_weight="3"
                android:elevation="5dp"
                app:cardCornerRadius="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/thered" />
            </androidx.cardview.widget.CardView>


            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="0.07"
                android:background="@color/purple_dark" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"

                android:orientation="vertical"
                >

                <TextView
                    android:text="استلام جديد PO"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_gravity="center|top"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:gravity="center"

                    android:textColor="@color/purple_dark"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:gravity="center"

                    android:layout_marginTop="15dp"

                    android:layout_weight="1"
                    android:orientation="horizontal"
                    >

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/fab_add_po"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:fabSize="normal"
                        app:srcCompat="@drawable/ic_add_black_24dp"
                        tools:ignore="VectorDrawableCompat" />

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/fab_print_po"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_marginRight="30dp"
                        app:fabSize="normal"
                        app:srcCompat="@drawable/ic_print_black_24dp"
                        tools:ignore="VectorDrawableCompat" />

                </LinearLayout>

            </LinearLayout>
            <!--            <TextView-->
            <!--                android:layout_width="match_parent"-->
            <!--                android:layout_height="wrap_content"-->

            <!--                android:gravity="center"-->
            <!--                android:text="PO"-->

            <!--                android:textColor="@color/purple_dark"-->
            <!--                android:textSize="12sp"-->
            <!--                android:textStyle="bold" />-->

        </LinearLayout>

        <LinearLayout
            android:id="@+id/second_linear"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="25dp"
            android:layout_marginBottom="8dp"
            android:layout_weight="1"
            android:background="@drawable/back_white"
            android:elevation="8dp"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="20dp"
                android:layout_weight="3"
                android:elevation="5dp"
                app:cardCornerRadius="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/four" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="0.07"
                android:background="@color/purple_dark" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"

                android:orientation="vertical"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_gravity="center|top"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/purple_dark"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:text="استلام مباشر DSD "
               />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:gravity="center"

                    android:layout_marginTop="15dp"

                    android:layout_weight="1"
                    android:orientation="horizontal"
                    >

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/fab_add_DSD"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        app:fabSize="normal"
                        app:srcCompat="@drawable/ic_add_black_24dp"
                        tools:ignore="VectorDrawableCompat" />

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/fab_print_DSD"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="30dp"
                        android:layout_gravity="center"
                        app:fabSize="normal"


                        app:srcCompat="@drawable/ic_print_black_24dp"
                        tools:ignore="VectorDrawableCompat" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:gravity="left">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab_add_setting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_gravity="left"
                android:layout_margin="15dp"
                android:backgroundTint="@color/purple_dark"
                android:src="@drawable/ic_settings_black_24dp" />

        </LinearLayout>
    </LinearLayout>



</LinearLayout>
